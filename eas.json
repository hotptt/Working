{
  "cli": { "version": ">= 3.18.0" },
  "build": {
    "production": {
      "android": {
        "image": "latest",
        "autoIncrement": "versionCode"
      },
      "env": {
        "EXPO_PUBLIC_ENV": "production"
      }
    },
    "preview": {
      "android": {
        "image": "latest",
        "autoIncrement": false
      },
      "env": {
        "EXPO_PUBLIC_ENV": "preview"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "internal"
      }
    }
  }
}